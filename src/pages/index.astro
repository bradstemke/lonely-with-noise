---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

// Fetch posts from all collections
const foundAudio = await getCollection('found-audio');
const answeringMachineTapes = await getCollection('answering-machine-tapes');
const fieldRecordings = await getCollection('field-recordings');

// Sort by date and get 2 most recent from each
const recentFoundAudio = foundAudio
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 2);

const recentTapes = answeringMachineTapes
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 2);

const recentFieldRecordings = fieldRecordings
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 2);
---

<Layout title="Lonely With Noise - Found Audio, Tapes & Field Recordings">
  <main class="home">
    <section class="hero">
      <div class="container">
        <h1 class="hero__title">Lonely With Noise</h1>
        <p class="hero__description">
          A collection of found sounds, forgotten voices, and ambient recordings. Each piece
          captures a moment in time—some intentional, some accidental, all worth listening to.
        </p>
      </div>
    </section>

    <section class="category-section">
      <div class="container">
        <div class="category-header">
          <h2>Found Audio</h2>
          <a href="/found-audio" class="view-all">View all →</a>
        </div>
        <div class="posts-grid">
          {
            recentFoundAudio.map((post) => (
              <PostCard
                title={post.data.title}
                pubDate={post.data.pubDate}
                description={post.data.description}
                audioFile={post.data.audioFile}
                excerpt={post.data.excerpt}
                slug={post.slug}
                category="found-audio"
              />
            ))
          }
        </div>
      </div>
    </section>

    <section class="category-section">
      <div class="container">
        <div class="category-header">
          <h2>Answering Machine Tapes</h2>
          <a href="/answering-machine-tapes" class="view-all">View all →</a>
        </div>
        <div class="posts-grid">
          {
            recentTapes.map((post) => (
              <PostCard
                title={post.data.title}
                pubDate={post.data.pubDate}
                description={post.data.description}
                audioFile={post.data.audioFile}
                excerpt={post.data.excerpt}
                slug={post.slug}
                category="answering-machine-tapes"
              />
            ))
          }
        </div>
      </div>
    </section>

    <section class="category-section">
      <div class="container">
        <div class="category-header">
          <h2>Field Recordings</h2>
          <a href="/field-recordings" class="view-all">View all →</a>
        </div>
        <div class="posts-grid">
          {
            recentFieldRecordings.map((post) => (
              <PostCard
                title={post.data.title}
                pubDate={post.data.pubDate}
                description={post.data.description}
                audioFile={post.data.audioFile}
                excerpt={post.data.excerpt}
                slug={post.slug}
                category="field-recordings"
              />
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>

<style lang="scss">
  .home {
    min-height: 100vh;
    padding-bottom: $spacing-4xl;
  }

  .hero {
    padding: $spacing-4xl 0 $spacing-3xl;
    text-align: center;
    border-bottom: 1px solid $border-color;
    margin-bottom: $spacing-3xl;
  }

  .hero__title {
    font-size: clamp($font-size-3xl, 5vw, $font-size-4xl);
    margin-bottom: $spacing-lg;
    background: $accent-gradient;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero__description {
    font-size: $font-size-lg;
    color: $text-secondary;
    max-width: 700px;
    margin: 0 auto;
    line-height: $line-height-relaxed;
  }

  .category-section {
    margin-bottom: $spacing-4xl;

    &:last-child {
      margin-bottom: 0;
    }
  }

  .category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: $spacing-xl;

    h2 {
      font-size: $font-size-2xl;
      margin: 0;
      text-transform: capitalize;
    }
  }

  .view-all {
    color: $accent-light;
    font-size: $font-size-base;
    font-weight: $font-weight-medium;
    transition: color $transition-base;

    &:hover {
      color: $accent;
    }
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 500px), 1fr));
    gap: $spacing-xl;
  }

  @media (max-width: $breakpoint-md) {
    .hero {
      padding: $spacing-3xl 0 $spacing-2xl;
    }

    .category-section {
      margin-bottom: $spacing-3xl;
    }

    .category-header {
      flex-direction: column;
      align-items: flex-start;
      gap: $spacing-sm;
    }

    .posts-grid {
      gap: $spacing-lg;
    }
  }
</style>
